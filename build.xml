<project name="TEvA" default="build-jar" basedir=".">

    <property name="doc.dir" value="${basedir}/javadoc"/>
    <property name="src.dir" value="${basedir}/src"/>
    <property name="deploy.dir" value="${basedir}/deploy"/>
    <property name="resources.dir" value="${basedir}/resources/"/>
    <property name="build.dir" value="${basedir}/build"/>
    <property name="lib.dir" value="${basedir}/lib"/>
    <property name="jar.file" value="${ant.project.name}.jar"/>


    <path id="build.classpath">
        <fileset dir="${lib.dir}">
            <include name="**/*.jar"/>
        </fileset>

    </path>


    <!-- ***************-->
    <!-- * Clean       *-->
    <!-- ***************-->

    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="$deploy.dir}"/>
    </target>


    <!-- *************** -->
    <!-- * Preparation * -->
    <!-- *************** -->

    <target name="prepare" depends="clean">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${deploy.dir}"/>
    </target>

    <!-- *************** -->
    <!-- * Compilation * -->
    <!-- *************** -->

    <target name="compile" depends="prepare">
        <javac destdir="${build.dir}"
               debug="on"
               deprecation="on"
               optimize="off">
            <src path="${src.dir}"/>
            <classpath refid="build.classpath"/>
        </javac>

        <copy todir="${build.dir}">
            <fileset dir="${resources.dir}">
                <include name="*.properties"/>
                <include name="*.csv"/>
            </fileset>
        </copy>
    </target>

    <target name="doc-prepare">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${doc.dir}"/>
    </target>

    <target name="javadoc" depends="doc-prepare">
        <javadoc packagenames="edu.mit.cci.*"
                 classpathref="build.classpath"
                 sourcepath="${src.dir}"
                 destdir="${doc.dir}"
                 author="true"
                 version="true"
                 windowtitle="TEvA API"
                 doctitle="TEvA"
                 bottom="Copyright Â© 2010 Josh Introne, Inc. All Rights Reserved."
                />
    </target>


    <target name="build-jar" depends="compile">

        <jar destfile="${deploy.dir}/${jar.file}">
            <fileset dir="${build.dir}"/>
            <zipgroupfileset dir="${lib.dir}" includes="**/*.jar"/>
        </jar>

    </target>

</project>